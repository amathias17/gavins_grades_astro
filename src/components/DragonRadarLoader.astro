---
// Dragon Radar Loading Screen - Malfunctioning Effect
---

<div class="dragon-radar-loader" id="dragon-radar-loader">
  <div class="radar-screen">
    <div class="radar-grid-bg"></div>
    <div class="radar-sweep"></div>

    <!-- Center orange triangle -->
    <div class="radar-center-triangle"></div>

    <!-- 7 Dragon Balls scattered and glitching - radar style dots -->
    <div class="dragon-ball-dot-radar" style="top: 20%; left: 15%;" data-delay="0s"></div>
    <div class="dragon-ball-dot-radar" style="top: 35%; left: 75%;" data-delay="0.2s"></div>
    <div class="dragon-ball-dot-radar" style="top: 65%; left: 25%;" data-delay="0.4s"></div>
    <div class="dragon-ball-dot-radar" style="top: 30%; left: 45%;" data-delay="0.6s"></div>
    <div class="dragon-ball-dot-radar" style="top: 80%; left: 60%;" data-delay="0.8s"></div>
    <div class="dragon-ball-dot-radar" style="top: 15%; left: 85%;" data-delay="1s"></div>
    <div class="dragon-ball-dot-radar" style="top: 75%; left: 10%;" data-delay="1.2s"></div>

    <!-- Static/Scanlines overlay -->
    <div class="radar-static"></div>

    <!-- Center text -->
    <div class="radar-status">
      <div class="status-text">SCANNING...</div>
      <div class="status-subtext">DRAGON RADAR SYSTEM</div>
      <div class="status-glitch">ERROR - SIGNAL INTERFERENCE</div>
    </div>
  </div>
</div>

<style>
  .dragon-radar-loader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: radial-gradient(circle at center, #0d3d0d 0%, #000000 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    animation: fadeOut 0.5s ease-out 5s forwards;
  }

  .radar-screen {
    position: relative;
    width: 500px;
    height: 500px;
    border-radius: 50%;
    background: radial-gradient(circle at center, #1a4d1a 0%, #0d260d 100%);
    border: 8px solid #2a5a2a;
    box-shadow:
      0 0 40px rgba(26, 77, 26, 0.8),
      inset 0 0 60px rgba(0, 0, 0, 0.5);
    overflow: hidden;
  }

  .radar-grid-bg {
    position: absolute;
    inset: 0;
    background-image:
      repeating-linear-gradient(0deg, transparent, transparent 49px, rgba(0, 255, 0, 0.1) 49px, rgba(0, 255, 0, 0.1) 50px),
      repeating-linear-gradient(90deg, transparent, transparent 49px, rgba(0, 255, 0, 0.1) 49px, rgba(0, 255, 0, 0.1) 50px);
    animation: gridFlicker 0.3s infinite;
  }

  .radar-sweep {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 50%;
    height: 4px;
    background: linear-gradient(90deg,
      rgba(255, 136, 0, 0) 0%,
      rgba(255, 136, 0, 0.8) 100%);
    transform-origin: left center;
    animation: radarSweep 2s linear infinite;
    filter: blur(2px);
  }

  .radar-center-triangle {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-left: 15px solid transparent;
    border-right: 15px solid transparent;
    border-bottom: 25px solid rgba(255, 102, 0, 0.9);
    transform: translate(-50%, -50%);
    z-index: 10;
    filter: drop-shadow(0 0 8px rgba(255, 102, 0, 0.8));
  }

  .dragon-ball-dot-radar {
    position: absolute;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: radial-gradient(circle at center, #ff6600 0%, #ff3300 100%);
    transform: translate(-50%, -50%);
    box-shadow:
      0 0 15px rgba(255, 102, 0, 0.9),
      0 0 30px rgba(255, 51, 0, 0.6),
      inset 0 0 8px rgba(255, 255, 255, 0.3);
    animation: radarDotPulse 1.5s ease-in-out infinite;
  }

  .dragon-ball-dot-radar:nth-child(1) { animation-delay: 0s; }
  .dragon-ball-dot-radar:nth-child(2) { animation-delay: 0.2s; }
  .dragon-ball-dot-radar:nth-child(3) { animation-delay: 0.4s; }
  .dragon-ball-dot-radar:nth-child(4) { animation-delay: 0.6s; }
  .dragon-ball-dot-radar:nth-child(5) { animation-delay: 0.8s; }
  .dragon-ball-dot-radar:nth-child(6) { animation-delay: 1s; }
  .dragon-ball-dot-radar:nth-child(7) { animation-delay: 1.2s; }

  .radar-static {
    position: absolute;
    inset: 0;
    background-image:
      repeating-linear-gradient(0deg,
        rgba(0, 0, 0, 0.1),
        rgba(0, 0, 0, 0.1) 1px,
        transparent 1px,
        transparent 2px);
    animation: staticNoise 0.1s infinite;
    pointer-events: none;
  }

  .radar-status {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 10;
  }

  .status-text {
    font-family: 'Press Start 2P', monospace;
    font-size: 1.2rem;
    color: #00ff00;
    text-shadow: 0 0 10px #00ff00;
    animation: textPulse 1s infinite;
  }

  .status-subtext {
    font-family: 'Press Start 2P', monospace;
    font-size: 0.5rem;
    color: #ffaa00;
    margin-top: 10px;
    opacity: 0.8;
  }

  .status-glitch {
    font-family: 'Press Start 2P', monospace;
    font-size: 0.6rem;
    color: #ff0000;
    margin-top: 20px;
    animation: glitchText 0.3s infinite;
  }

  @keyframes fadeOut {
    to {
      opacity: 0;
      pointer-events: none;
    }
  }

  @keyframes radarSweep {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes gridFlicker {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  @keyframes radarDotPulse {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 1;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.3);
      opacity: 0.7;
    }
  }

  @keyframes staticNoise {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-10px);
    }
  }

  @keyframes textPulse {
    0%, 100% {
      opacity: 1;
      text-shadow: 0 0 10px #00ff00;
    }
    50% {
      opacity: 0.6;
      text-shadow: 0 0 5px #00ff00;
    }
  }

  @keyframes glitchText {
    0%, 90%, 100% {
      transform: translate(0);
      opacity: 1;
    }
    92% {
      transform: translate(-3px, 2px);
      opacity: 0.8;
    }
    94% {
      transform: translate(3px, -2px);
      opacity: 0.8;
    }
    96% {
      transform: translate(-2px, -1px);
      opacity: 0.8;
    }
  }

  @media (max-width: 640px) {
    .radar-screen {
      width: 90vmin;
      height: 90vmin;
    }

    .status-text {
      font-size: 0.8rem;
    }

    .status-subtext {
      font-size: 0.4rem;
    }

    .status-glitch {
      font-size: 0.5rem;
    }

    .dragon-ball-dot-radar {
      width: 15px;
      height: 15px;
    }
  }
</style>

<script>
  // Auto-hide loader after 5 seconds
  setTimeout(() => {
    const loader = document.getElementById('dragon-radar-loader');
    if (loader) {
      setTimeout(() => {
        loader.style.display = 'none';
      }, 500);
    }
  }, 5000);
</script>
