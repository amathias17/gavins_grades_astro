---
import { ClientRouter } from "astro:transitions";
import AnimeHeader from "../components/AnimeHeader.astro";
import DragonRadarLoader from "../components/DragonRadarLoader.astro";
import gradesData from "../data/grades.json";
import missingData from "../data/missing_assignments.json";
import "../styles/global.css";

// Get all classes for power monitor with letter grades for color coding
const allClasses = gradesData.classes.map(c => ({
  name: c.class_name,
  grade: c.current_grade || 0,
  letterGrade: c.letter_grade || "F"
}));

// Calculate overall power level (average of all grades)
const powerLevel = gradesData.overall_average || 0;

// Get all missing assignments for training modules
const missingAssignments = missingData.missing_assignments;

// Calculate total missing points
const totalMissingPoints = missingAssignments.reduce((sum, assignment) => {
  return sum + parseInt(assignment.max_points || "0");
}, 0);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Dragon Ball Z Training Lab - Track your Saiyan power levels" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <ClientRouter />
    <title>DBZ Training Lab - Gavin's Grades</title>
  </head>
  <body class="font-player leading-normal min-w-screen p-5 text-white dragon-radar-bg">
    <DragonRadarLoader />
    <div class="fixed h-full left-0 dragon-radar-grid top-0 w-full z-0"></div>
    <div class="fixed h-full left-0 dragon-radar-triangle top-0 w-full z-0"></div>
    <div class="fixed h-full left-0 dragon-radar-dots top-0 w-full z-0">
      <div class="dragon-ball-dot" style="top: 15%; left: 8%; animation-delay: 0s;"></div>
      <div class="dragon-ball-dot" style="top: 10%; left: 50%; animation-delay: 0.3s;"></div>
      <div class="dragon-ball-dot" style="top: 40%; left: 90%; animation-delay: 0.6s;"></div>
      <div class="dragon-ball-dot" style="top: 60%; left: 12%; animation-delay: 0.9s;"></div>
      <div class="dragon-ball-dot" style="top: 88%; left: 70%; animation-delay: 1.2s;"></div>
      <div class="dragon-ball-dot" style="top: 50%; left: 35%; animation-delay: 1.5s;"></div>
      <div class="dragon-ball-dot" style="top: 85%; left: 92%; animation-delay: 1.8s;"></div>
    </div>
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 focus:z-50 focus:p-4 focus:bg-blue-600 focus:text-white">Skip to main content</a>
    <AnimeHeader/>
    <main id="main-content" role="main">
      <div class="dashboard max-w-[1400px] mb-0 ml-auto mr-auto mt-0 relative">
        <section class="anime-shell" aria-labelledby="dbz-title">
    <header class="hero">
      <p class="hero-badge">Capsule Corp Field Log</p>
      <h1 id="dbz-title" class="hero-title">DRAGON BALL Z: SAIYAN TRAINING LAB</h1>
      <p class="hero-sub">Power levels synced with actual class grades.</p>
      <div class="hero-stats">
        <div class="stat-card">
          <span class="stat-label">Current Form</span>
          <span class="stat-value">Super Saiyan</span>
          <span class="stat-meta">Aura: Gold Burst</span>
        </div>
        <div class="stat-card">
          <span class="stat-label">Power Level</span>
          <span class="stat-value">9001</span>
          <span class="stat-meta">Overclocked</span>
        </div>
        <div class="stat-card">
          <span class="stat-label">Gravity Room</span>
          <span class="stat-value">120x</span>
          <span class="stat-meta">Core Stability: 86%</span>
        </div>
      </div>
    </header>

    <div class="grid">
      <article class="panel power-panel">
        <div class="panel-title">Power Level Monitor</div>
        <div class="meter">
          <div class="meter-fill" style={`width: ${powerLevel}%;`}></div>
          <div class="meter-glow"></div>
        </div>
        {allClasses.map(c => (
          <div class="panel-row">
            <span class="class-name">{c.name}</span>
            <span class={`chip grade-${c.letterGrade.toLowerCase()}`}>{c.grade}%</span>
          </div>
        ))}
      </article>

      <article class="panel training-panel">
        <div class="panel-title">Missing Assignments</div>
        <ul class="module-list">
          {missingAssignments.map(assignment => (
            <li>
              <span class="assignment-name">{assignment.assignment_name}</span>
              <span class="chip chip-red">{assignment.max_points} pts</span>
            </li>
          ))}
        </ul>
        <div class="panel-foot">
          <div>{missingData.metadata.count} Total Missing</div>
          <div class="chip chip-red" style="margin-top: 8px;">{totalMissingPoints} pts</div>
        </div>
      </article>

      <article class="panel timeline-panel">
        <div class="panel-title">Arc Timeline</div>
        <div class="timeline">
          <div class="timeline-item">
            <div class="timeline-name">Saiyan Arrival</div>
            <div class="timeline-bar"><span style="width: 100%;"></span></div>
          </div>
          <div class="timeline-item">
            <div class="timeline-name">Namek Pursuit</div>
            <div class="timeline-bar"><span style="width: 78%;"></span></div>
          </div>
          <div class="timeline-item">
            <div class="timeline-name">Android Assault</div>
            <div class="timeline-bar"><span style="width: 56%;"></span></div>
          </div>
          <div class="timeline-item">
            <div class="timeline-name">Cell Games</div>
            <div class="timeline-bar"><span style="width: 32%;"></span></div>
          </div>
        </div>
      </article>

      <article class="panel fusion-panel">
        <div class="panel-title">Fusion Chamber</div>
        <div class="fusion-grid">
          <div class="fusion-card">
            <span class="stat-label">Left Sync</span>
            <span class="stat-value">Goku</span>
            <span class="stat-meta">Rhythm: Stable</span>
          </div>
          <div class="fusion-card">
            <span class="stat-label">Right Sync</span>
            <span class="stat-value">Vegeta</span>
            <span class="stat-meta">Rhythm: Volatile</span>
          </div>
        </div>
        <div class="fusion-result">
          <span class="stat-label">Fusion Output</span>
          <span class="stat-value">Gogeta</span>
          <span class="stat-meta">Success Rate: 84%</span>
        </div>
      </article>
    </div>

    <!-- Scouter Readout Section -->
    <section class="scouter-section">
      <article class="panel scouter-panel">
        <div class="panel-title">Scouter Readout</div>
        <div class="scouter">
          <div class="scouter-ring"></div>
          <div class="scouter-center">
            <span class="scouter-label">Target</span>
            <span class="scouter-value">Gohan</span>
            <span class="scouter-meta">Signal: Locked</span>
          </div>
        </div>
        <div class="scouter-grid">
          <div>
            <span class="stat-label">Range</span>
            <span class="stat-value">12 km</span>
          </div>
          <div>
            <span class="stat-label">Threat</span>
            <span class="stat-value">Medium</span>
          </div>
        </div>
      </article>
    </section>
  </section>

<style>
  .anime-shell {
    --dbz-orange: #f78a1d;
    --dbz-gold: #ffd24a;
    --dbz-blue: #1a4fd6;
    --dbz-red: #e4362a;
    --dbz-ink: #0e0b0a;
    --dbz-steel: #1c222e;
    position: relative;
    border: 4px solid #ffffff;
    background: radial-gradient(circle at top, rgba(255, 210, 74, 0.2), transparent 55%),
      linear-gradient(135deg, rgba(247, 138, 29, 0.2), rgba(26, 79, 214, 0.25) 50%, rgba(14, 11, 10, 0.9));
    padding: 32px;
    overflow: hidden;
  }


  .anime-shell::after {
    content: "";
    position: absolute;
    top: -80px;
    right: -80px;
    width: 320px;
    height: 320px;
    border-radius: 50%;
    border: 3px solid rgba(255, 210, 74, 0.4);
    box-shadow: 0 0 40px rgba(255, 210, 74, 0.4),
      0 0 80px rgba(247, 138, 29, 0.3);
    animation: auraPulse 4s ease-in-out infinite;
    pointer-events: none;
  }

  .hero {
    position: relative;
    padding: 24px;
    border: 3px solid #ffffff;
    background: linear-gradient(120deg, rgba(14, 11, 10, 0.9), rgba(26, 79, 214, 0.4));
    box-shadow: 0 0 0 4px #000000, 12px 12px 0 rgba(0, 0, 0, 0.6);
    margin-bottom: 32px;
  }

  .hero-badge {
    display: inline-block;
    background: var(--dbz-red);
    color: #ffffff;
    font-size: 0.6rem;
    letter-spacing: 0.2em;
    padding: 6px 10px;
    text-transform: uppercase;
  }

  .hero-title {
    margin-top: 16px;
    font-size: clamp(1.6rem, 4vw, 2.8rem);
    line-height: 1.3;
    text-transform: uppercase;
    color: #ffffff;
    text-shadow: 0 0 18px rgba(255, 210, 74, 0.6);
  }

  .hero-sub {
    margin-top: 12px;
    max-width: 520px;
    color: rgba(255, 255, 255, 0.75);
    font-size: 0.75rem;
  }

  .hero-stats {
    display: grid;
    gap: 16px;
    margin-top: 20px;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  }

  .stat-card {
    border: 2px solid rgba(255, 255, 255, 0.8);
    background: rgba(12, 12, 12, 0.8);
    padding: 12px 14px;
  }

  .stat-label {
    font-size: 0.55rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.7);
  }

  .stat-value {
    display: block;
    margin-top: 8px;
    font-size: 1rem;
    color: var(--dbz-gold);
  }

  .stat-meta {
    display: block;
    margin-top: 6px;
    font-size: 0.55rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .grid {
    display: grid;
    gap: 24px;
    grid-template-columns: repeat(3, 1fr);
  }

  .scouter-section {
    margin-top: 32px;
    display: flex;
    justify-content: center;
  }

  .scouter-section .scouter-panel {
    max-width: 400px;
    width: 100%;
  }

  .panel {
    border: 3px solid #ffffff;
    padding: 18px;
    background: rgba(10, 10, 10, 0.9);
    box-shadow: 0 0 0 4px #000000, 10px 10px 0 rgba(0, 0, 0, 0.55);
  }

  .panel-title {
    font-size: 0.7rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin-bottom: 14px;
    color: var(--dbz-gold);
  }

  .panel-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 0;
    border-bottom: 1px dashed rgba(255, 255, 255, 0.2);
    font-size: 0.7rem;
    gap: 12px;
  }

  .panel-row:last-child {
    border-bottom: none;
  }

  .class-name {
    font-size: 0.55rem;
    flex: 1;
    word-wrap: break-word;
    overflow-wrap: break-word;
    line-height: 1.3;
  }

  .meter {
    position: relative;
    height: 16px;
    background: #101010;
    border: 2px solid #ffffff;
    overflow: hidden;
    margin-bottom: 12px;
  }

  .meter-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--dbz-orange), var(--dbz-gold));
  }

  .meter-glow {
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.6), transparent);
    animation: scanSweep 3s linear infinite;
  }

  .chip {
    background: var(--dbz-orange);
    padding: 4px 8px;
    border: 2px solid #ffffff;
    font-size: 0.6rem;
    color: #0b0b0b;
    min-width: 70px;
    text-align: center;
    flex-shrink: 0;
  }

  .chip-blue {
    background: var(--dbz-blue);
    color: #ffffff;
  }

  .chip-red {
    background: var(--dbz-red);
    color: #ffffff;
  }

  /* Grade color classes matching original design */
  .chip.grade-a {
    background: #01BC61;
    color: #000;
  }

  .chip.grade-b {
    background: #E6EF18;
    color: #000;
  }

  .chip.grade-c {
    background: #E69E18;
    color: #000;
  }

  .chip.grade-d {
    background: #E66A78;
    color: #fff;
  }

  .chip.grade-f {
    background: #E60A18;
    color: #fff;
  }

  .scouter {
    position: relative;
    width: 140px;
    height: 140px;
    margin: 0 auto 16px;
  }

  .scouter-ring {
    position: absolute;
    inset: 0;
    border-radius: 50%;
    border: 3px solid rgba(230, 54, 42, 0.8);
    box-shadow: 0 0 16px rgba(230, 54, 42, 0.6);
  }

  .scouter-center {
    position: absolute;
    inset: 18px;
    border-radius: 50%;
    background: rgba(14, 11, 10, 0.9);
    border: 2px solid rgba(255, 255, 255, 0.7);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 6px;
    text-align: center;
  }

  .scouter-label {
    font-size: 0.5rem;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
  }

  .scouter-value {
    font-size: 0.85rem;
    color: var(--dbz-red);
  }

  .scouter-meta {
    font-size: 0.5rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .scouter-grid {
    display: grid;
    gap: 12px;
    grid-template-columns: repeat(2, 1fr);
  }

  .training-panel .module-list {
    display: grid;
    gap: 10px;
    font-size: 0.7rem;
  }

  .training-panel li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px dashed rgba(255, 255, 255, 0.2);
    padding-bottom: 6px;
    gap: 8px;
  }

  .training-panel li:last-child {
    border-bottom: none;
  }

  .assignment-name {
    flex: 1;
    font-size: 0.55rem;
    word-wrap: break-word;
    overflow-wrap: break-word;
    line-height: 1.3;
  }

  .panel-foot {
    margin-top: 16px;
    font-size: 0.6rem;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
  }

  .timeline {
    display: grid;
    gap: 16px;
  }

  .timeline-name {
    font-size: 0.65rem;
    text-transform: uppercase;
    margin-bottom: 6px;
  }

  .timeline-bar {
    height: 10px;
    border: 2px solid #ffffff;
    background: #121212;
  }

  .timeline-bar span {
    display: block;
    height: 100%;
    background: linear-gradient(90deg, var(--dbz-blue), var(--dbz-gold));
  }

  .fusion-grid {
    display: grid;
    gap: 12px;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    margin-bottom: 12px;
  }

  .fusion-card {
    border: 2px solid rgba(255, 255, 255, 0.7);
    padding: 10px;
    background: rgba(18, 18, 18, 0.8);
  }

  .fusion-result {
    border: 2px solid var(--dbz-gold);
    padding: 12px;
    background: rgba(26, 79, 214, 0.2);
  }

  @keyframes auraPulse {
    0%,
    100% {
      transform: scale(0.96);
      opacity: 0.6;
    }
    50% {
      transform: scale(1.02);
      opacity: 1;
    }
  }

  @keyframes scanSweep {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  @media (max-width: 1024px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .anime-shell {
      padding: 15px;
    }

    .hero {
      padding: 15px;
    }

    .hero-badge {
      font-size: 0.5rem;
      padding: 4px 8px;
    }

    .hero-title {
      font-size: 1.2rem;
      margin-top: 10px;
    }

    .hero-sub {
      font-size: 0.65rem;
    }

    .hero-stats {
      gap: 12px;
    }

    .stat-card {
      padding: 10px 12px;
    }

    .grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .panel {
      padding: 15px;
    }

    .panel-title {
      font-size: 0.6rem;
      margin-bottom: 12px;
    }

    .chip {
      font-size: 0.55rem;
      padding: 3px 6px;
      min-width: 60px;
    }

    .class-name,
    .assignment-name {
      font-size: 0.5rem;
    }

    .scouter-section {
      margin-top: 20px;
    }
  }
</style>
        </section>
      </div>
    </main>
  </body>
</html>

<style is:global>
  .dragon-radar-bg {
    background: radial-gradient(circle at center, #1a4d1a 0%, #0d260d 100%);
  }

  .dragon-radar-grid {
    background-image:
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 49px,
        rgba(0, 0, 0, 0.5) 49px,
        rgba(0, 0, 0, 0.5) 50px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 49px,
        rgba(0, 0, 0, 0.5) 49px,
        rgba(0, 0, 0, 0.5) 50px
      );
    pointer-events: none;
  }

  .dragon-radar-triangle {
    pointer-events: none;
  }

  .dragon-radar-triangle::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-left: 25px solid transparent;
    border-right: 25px solid transparent;
    border-bottom: 45px solid rgba(204, 85, 0, 0.4);
    transform: translate(-50%, -66%);
  }

  .dragon-radar-dots {
    pointer-events: none;
  }

  /* All 7 dragon ball dots with consistent styling */
  .dragon-ball-dot {
    position: absolute;
    width: 10px;
    height: 10px;
    background: #ff8800;
    border-radius: 50%;
    box-shadow: 0 0 8px #ff8800, 0 0 16px #ff6600;
    animation: blinkDot 2s ease-in-out infinite;
  }

  @keyframes blinkDot {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.4;
      transform: scale(0.8);
    }
  }

  .scanlines {
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.15),
      rgba(0, 0, 0, 0.15) 1px,
      transparent 1px,
      transparent 2px
    );
    pointer-events: none;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .focus\:not-sr-only:focus {
    position: static;
    width: auto;
    height: auto;
    padding: 1rem;
    margin: 0;
    overflow: visible;
    clip: auto;
    white-space: normal;
  }
</style>
