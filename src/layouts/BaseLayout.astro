---
import Header from "../components/Header.astro";
import "../styles/global.css";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content="Track student grades, assignments, and academic progress for Gavin" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
        <title>Grade Quest - Gavin's Grade Tracker</title>
    </head>
    <body class="bg-black font-player leading-normal min-w-screen p-5 text-white">
        <div class="fixed h-full left-0 scanlines top-0 w-full z-1000"></div>
        <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 focus:z-50 focus:p-4 focus:bg-blue-600 focus:text-white">Skip to main content</a>
        <Header/>
        <main id="main-content" role="main">
            
            <div class="dashboard max-w-[1400px] mb-0 ml-auto mr-auto mt-0 relative">
                <slot />
            </div>
        </main>
    </body>
</html>

<style is:global>
    .header {
    background: #1a1a1a;
}

.scanlines {
    background: repeating-linear-gradient(
                0deg,
                rgba(0, 0, 0, 0.15),
                rgba(0, 0, 0, 0.15) 1px,
                transparent 1px,
                transparent 2px
            );
    pointer-events: none;
}

.pixel-border {
    border: 4px solid;
    border-image: repeating-linear-gradient(
                90deg,
                #fff 0px, #fff 4px,
                transparent 4px, transparent 8px
            ) 4;
    box-shadow: 0 0 0 4px #000,
                0 0 0 8px #fff,
                8px 8px 0 8px rgba(0,0,0,0.5);
}

.blink {
    animation: blink 1s step-start infinite;
}

@keyframes blink {
    50% {
        opacity: 0;
    }
}

.card {
    background: #1a1a1a;
}

.grade-badge {
    background: #ff0000;
    padding: 8px 15px;
    border: 3px solid #fff;
    font-size: 0.6em;
    color: #fff;
}

.grade-badge.a {
    background: #00ff00;
    color: #000;
}

.grade-badge.b {
    background: #00ffff;
    color: #000;
}

.grade-badge.c {
    background: #ffff00;
    color: #000;
}

.grade-badge.grade-a {
    background: #01BC61;
    color: #000;
}

.grade-badge.grade-b {
    background: #E6EF18;
    color: #000;
}

.grade-badge.grade-c {
    background: #E69E18;
    color: #000;
}

.grade-badge.grade-d {
    background: #E66A78;
    color: #fff;
}

.grade-badge.grade-f {
    background: #E60A18;
    color: #fff;
}

.progress-fill {
    background: repeating-linear-gradient(
    90deg,
    #00ff00 0px,
    #00ff00 8px,
    #00cc00 8px,
    #00cc00 16px
  );
}

.progress-fill.grade-a {
    background: repeating-linear-gradient(
    90deg,
    #01BC61 0px,
    #01BC61 8px,
    #019950 8px,
    #019950 16px
  );
}

.progress-fill.grade-b {
    background: repeating-linear-gradient(
    90deg,
    #E6EF18 0px,
    #E6EF18 8px,
    #B8BF13 8px,
    #B8BF13 16px
  );
}

.progress-fill.grade-c {
    background: repeating-linear-gradient(
    90deg,
    #E69E18 0px,
    #E69E18 8px,
    #B87E13 8px,
    #B87E13 16px
  );
}

.progress-fill.grade-d {
    background: repeating-linear-gradient(
    90deg,
    #E66A78 0px,
    #E66A78 8px,
    #B85560 8px,
    #B85560 16px
  );
}

.progress-fill.grade-f {
    background: repeating-linear-gradient(
    90deg,
    #E60A18 0px,
    #E60A18 8px,
    #B80813 8px,
    #B80813 16px
  );
}

.progress-fill::after {
    background: #fff;
}

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    .focus\:not-sr-only:focus {
        position: static;
        width: auto;
        height: auto;
        padding: 1rem;
        margin: 0;
        overflow: visible;
        clip: auto;
        white-space: normal;
    }
</style>
